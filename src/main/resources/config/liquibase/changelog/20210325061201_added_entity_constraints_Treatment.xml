<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">
    <!--
        Added the constraints for entity Treatment.
    -->
    <changeSet id="20210325061201-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="record_id"
                                 baseTableName="treatment"
                                 constraintName="fk_treatment_record_id"
                                 referencedColumnNames="id"
                                 referencedTableName="medical_record"/>

        <addForeignKeyConstraint baseColumnNames="treatment_id"
                                 baseTableName="treatment_doctor"
                                 constraintName="fk_treatment_doctor_treatment_id"
                                 referencedColumnNames="id"
                                 referencedTableName="treatment"/>

        <addForeignKeyConstraint baseColumnNames="doctor_id"
                                 baseTableName="treatment_doctor"
                                 constraintName="fk_treatment_doctor_doctor_id"
                                 referencedColumnNames="id"
                                 referencedTableName="doctor"/>
        
        <addForeignKeyConstraint baseColumnNames="treatment_id"
                                 baseTableName="treatment_nurse"
                                 constraintName="fk_treatment_nurse_treatment_id"
                                 referencedColumnNames="id"
                                 referencedTableName="treatment"/>

        <addForeignKeyConstraint baseColumnNames="nurse_id"
                                 baseTableName="treatment_nurse"
                                 constraintName="fk_treatment_nurse_nurse_id"
                                 referencedColumnNames="id"
                                 referencedTableName="nurse"/>
        
        <addForeignKeyConstraint baseColumnNames="patient_id"
                                 baseTableName="treatment"
                                 constraintName="fk_treatment_patient_id"
                                 referencedColumnNames="id"
                                 referencedTableName="patient"/>

    </changeSet>
</databaseChangeLog>
